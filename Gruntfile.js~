            module.exports = function (grunt) {
                grunt.initConfig({
                    connect: {        
            server: { /* Подзадача */
                options: {
                    keepalive: true, /* работать постоянно */
                    port: 8000, /* номер порта */
                    base: 'public' /* публичная директория */
                }
            }
        
         } /* grunt-contrib-connect */
                });
                grunt.loadNpmTasks('grunt-contrib-connect');
            };
        
